<!-- подготовка диаграммы к отображению -->
<section>
  <div id="visited_countries_chart" class="simple_pie_chart" width='300px' height='330px'>
    <%= render '/layouts/pie_chart' %>
  </div>
</section>
<!--- подготовка графика -->
<div id="chart_div" style="width: 400px; height: 300px;"></div>
<%
   report_data=current_user.prepare_graphic_dates
   init_x=report_data["initialize_x"]
   init_y=report_data["initialize_y"]
%>
<%= javascript_tag do %>
    new LineChart(<%= raw init_x%>,<%=init_y%>,'chart_div')
<% end %>
